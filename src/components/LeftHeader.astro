---
import HeaderLink from './HeaderLink.astro';
import { Card, Typo, Link } from '@koibumi-design/solidjs';
import { GLOBAL_STYLE, SITE_TITLE } from '../consts';
---

<!-- 在博客页面中，将 header 包裹在一个具有 `blog-page-header` 类的容器内 -->
<div class="blog-page-header">
    <Card class="head-container" variant={GLOBAL_STYLE}>
        <header>
            <nav class="header-nav">
                <div class="header-left">
                    <Typo variant="h1">
                        <Link href="/" id="title">
                            {SITE_TITLE}
                        </Link>
                    </Typo>
                </div>
                <div class="header-right">
                    <div class="internal-links">
                        <HeaderLink href="/">Home</HeaderLink>
                        <HeaderLink href="/blog">Blog</HeaderLink>
                        <HeaderLink href="https://github.com/koibumi-design/astro-blog">GitHub</HeaderLink>
                    </div>
                </div>
            </nav>
        </header>
    </Card>
</div>

<style>

    .blog-page-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 10%; /* 左侧宽度 */
        height: 100vh;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        z-index: 100;
    }

    .header-nav {/* 左侧标题栏 */
        padding: 1rem 0.5rem; /* 调整顶部和底部间距，*/
        display: flex;
        flex-direction: column; /* 更改为垂直方向排列 */
        align-items: center;

        /* 添加外边框样式，并根据屏幕宽度调整 */
        border: 1px solid #ccc;
        border-width: 1px 0; /* 只保留上下边框，去掉左右边框 */

        /* 使用媒体查询根据屏幕宽度调整边框宽度 */
        @media (min-width: 768px) {
            border-width: 2px 0; /* 在屏幕宽度≥768px时，增大边框宽度 */
        }
    }

    /* 选择器可以根据实际需要替换为具体的文字元素，如 .header-nav h1, .header-nav a 等 */
    .header-nav h1, .header-nav a { /* 示例：为 .header-nav 内的 h1 和 a 元素设置字体大小 */
        font-size: 1rem;

        /* 使用媒体查询根据屏幕宽度调整字体大小 */
        @media (min-width: 768px) {
            font-size: 1.2rem; /* 在屏幕宽度≥768px时，增大字体大小 */
        }
    }

    #title {
        text-decoration: none;
    }

    #title:hover {
        text-decoration: underline;
    }

    .header-right {

    }

    .internal-links {

        display: flex;
        flex-direction: column; /* 更改为垂直方向排列 */
        gap: 3rem; /* 设置按钮之间的垂直间距 */
    }

    #title {
        text-decoration: none;
    }

    #title:hover {
        text-decoration: underline;
    }

    nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

</style>

